@model NegociosElectronicosII.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    .card-footer {
        height:390px !important;
    }

    .card {
        height:400px !important;
    }
</style>
<div class="card">
    <div class="card-header">
        <div class="form-row">
            <div class="col form-group">
                <h4 style="color:black">@Recursos.InicioSesion</h4>
            </div>
            <div class="col form-group">
                <a href="@Url.Action("Index","Principal")" style="width:100px" class="float-right btn btn-outline-primary mt-1">@Recursos.Regresar</a>
            </div>
        </div>
        @*<div class="d-flex justify-content-end social_icon">
                <span><i class="fab fa-facebook-square"></i></span>
                <span><i class="fab fa-google-plus-square"></i></span>
                <span><i class="fab fa-twitter-square"></i></span>
            </div>*@
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @*<form method="post">*@
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                @*<input type="text" class="form-control" placeholder="username" id="Email" name="Email">*@
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = Recursos.PlaceholderEmail } })

            </div>
            <br />
            <div>
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                @*<input type="password" class="form-control" placeholder="contrasena" id="Password" name="Password">*@
                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = Recursos.Placeholder, @Type = "Password" } })
                <br />
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="form-group">
                <input type="button" id="btnLogin" value="Iniciar sesion" class="btn float-right login_btn"> &nbsp;
                @*<a href="@(Url.Action("LoginConGoogle","Login"))"  class="btn btn-danger float-right" style="font-size:small">
                <i class="fa fa-google"></i>
                 Loguearme <br /> con Google</a>*@
            </div>
            @*</form>*@
        }
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-center links">
            @Recursos.NoCuenta<p id="registro">@Html.ActionLink(Recursos.Registrate, "Create", "Registro")
        </div>
        <div class="d-flex justify-content-center">
            <p id="forgotpass">
                @Html.ActionLink(Recursos.ForgotPassword, "RecoveryPass", "Login")
                <br />
                <a href="@(Url.Action("LoginWithCode","Login"))">Iniciar sesion con un codigo</a>
            </p>
            
        </div>
    </div>

</div>
<!-- Button trigger modal -->



<script type="text/javascript">

    @if(!String.IsNullOrEmpty(ViewBag.Message))
    {
        @:alert('@ViewBag.Message');
    }

    $('#btnLogin').click(function () {
        fnLoader();
        $('form').submit();
    });

    $('#registro').click(function () {
        fnLoader();
        $('form').submit();
    });
    $('#forgotpass').click(function () {
        fnLoader();
        $('form').submit();
    });

</script>