@model IEnumerable<NegociosElectronicosII.Models.NE_ProductoImagen>
<div class="col-md-3-24"> <strong>Filter by:</strong> </div> <!-- col.// -->
<div class="col-md-21-24">
    <ul class="list-inline">
        <li class="list-inline-item dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">   Marca </a>
            <div class="dropdown-menu p-3" style="max-width:400px;">
                @foreach (var item in (List<NegociosElectronicosII.Models.NE_Marca>)ViewBag.Marcas)
                {
                    <label class="form-check">
                        <a href="#">
                            <input type="checkbox" class="form-check-input marca_articulo" value="@item.MarcaId"> @item.Marca
                        </a>
                    </label>
                }
            </div> <!-- dropdown-menu.// -->
        </li>
        <li class="list-inline-item dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">  Color </a>
            <div class="dropdown-menu p-3" style="max-width:400px;" ">
                @foreach (var item in (List<NegociosElectronicosII.Models.NE_Color>)ViewBag.Color)
                {
                    <label class="form-check">
                        <a href="#">
                            <input type="checkbox" class="form-check-input color_articulo" value="@item.ColorId"> @item.Color
                        </a>
                    </label>
                }

            </div> <!-- dropdown-menu.// -->
        </li>
        <li class="list-inline-item">
            <div class="form-inline">
                <label class="mr-2">Precio</label>
                <input class="form-control form-control-sm" placeholder="Min" type="number" id="min_art">
                <span class="px-2"> - </span>
                <input class="form-control form-control-sm" placeholder="Max" type="number" id="max_art">
                <button type="button" id="btnBuscarr" class="btn btn-sm ml-2">Buscar</button>
            </div>
        </li>

    </ul>
</div> <!-- col.// -->
<script type="text/javascript">

    $(document).ready(function () {

        $('#btnBuscarr').click(function () {
            fnPintarGridDeArticulos(1);
        });
    });

</script>